package db;

import javax.swing.JButton;
import javax.swing.JFrame;
import javax.swing.JLabel;
import javax.swing.JTextArea;

public class UIInterface {
private JFrame View;
	public UIInterface(){
		 View = new JFrame();
		View.setBounds(200, 100, 850, 530);
		View.setLayout(null);
		View.setDefaultCloseOperation(JFrame.EXIT_ON_CLOSE);
		
		setView();
		
	}
	private void  setView(){

		JLabel bookName = new JLabel("書名:");
		bookName.setBounds(10, 10, 50, 20);
		
		JLabel showArea = new JLabel("書名:");
		showArea.setBounds(10, 100, 100, 100);
		
		
		JTextArea bookNameArea = new JTextArea();
		bookNameArea.setBounds(100, 10, 100, 20);
  
		JButton search = new JButton("search");
		search.setBounds(10, 70, 90, 25);
		
		View.add(bookName);
		View.add(bookNameArea);
		View.add(search);
		
		View.setVisible(true);
	

	}

}
